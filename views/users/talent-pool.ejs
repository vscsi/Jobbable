<%- include('./../includes/portal-head.ejs') %>
<link rel="stylesheet" href="/css/user-dashboard.css">
</head>

<body>
    <div class="container">
        <nav class="navbar">
            <div class="nav_icon" onclick="toggleSidebar()">
                <i class="fa fa-bars"></i>
            </div>
            <div class="navbar__left">
            </div>
            <div class="navbar__right">
            </div>
        </nav>

        <main>
            <div class="main__container">
                <div class="main__title">
                    <img src="/images/hello.svg">
                    <div class="main__greeting">
                        <h1>Hello</h1>
                        <p>Talent Pool</p>
                    </div>
                </div>

                <div class="charts">
                    <h1><%= pageHeader%></h1>


                    <% if(applyHistory.length > 0) { %>
                    <% for(let data of applyHistory) { %>

                    <div class="charts__left">
                        <div class="charts__left__title">
                            <div>
                                <p>Jobs applied: <%= data.jobs %> </p>
                                <p>Name of talent applied: <%= data.firstname %> <%= data.lastname %> </p>
                                <%if(data.skills.length > 0 ) { %>
                                <p>Skills: <%= data.skills %> </p>
                                <% } else { %>
                                <p>Skills: -</p>
                                <% } %>
                            </div>
                        </div>
                    </div>
                    <% } %>
                    <% } else { %>
                    <h1> No one has applied yet! </h1>
                    <% } %>



                </div>
            </div>
        </main>

        <%- include('../includes/portal_nav-employees.ejs') %>
        
    </div>

</body>

</html>

<script src="/js/user-dashboard.js"></script>